<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Miniblogger</title>

    <!-- Bootstrap -->

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

    <!-- Optional theme
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css"> -->
    <link href="http://bootswatch.com/amelia/bootstrap.min.css" rel="stylesheet" type="text/css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>
    <script src="http://getbootstrap.com/assets/js/docs.min.js"></script>

    <!-- Font Awesome -->
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

<style>

  /* Global */

  section.primary {
    width: 950px;
    margin: 0 auto;
  }

  div.header-wrap {
    margin: 0 auto;
    width: 980px;
  }

  #signout-button {
    margin-top: 7px;
    margin-right: 10px;
  }

  #signout-button:hover {
    background-color: #d92432;
    border: 1px solid #d92432;
  }

  /* For Page */

  p.post-body {
    font-size: 16px;
  }

  /* Style profile image */

  div.profile-header img {
    margin: 10px auto;
    display: block;
  }  

  div.profile-header h1 {
    text-align: center;
  }  


  img.profile-img {
    /* maybe make 100x100 circular?*/
    display:inline-block;
    height: auto;
    width: 100px;
    border-radius: 100%;
  }



</style>


</head>
<body>

<div class="navbar navbar-default">
  <div class="header-wrap">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><i class="fa fa-book"></i> MiniBlogger</a>
    </div>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Explore <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="/posts">All Posts</a></li>
            <li><a href="/users">Friends</a></li>
          </ul>
        </li>
        <!-- <li><a href="#">Link</a></li> -->
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if @signed_in %>

          <li><a href="<%= "/users/#{ @current_user.id }" %>"><%= @current_user.fname %></a></li>
          <li><a href="/posts/new">New Post</a></li>
          <li>
          	<form action="/session/destroy" method="post">
          	  <button id="signout-button" class="btn btn-primary" type="submit">Sign Out</button>
          	</form>
          </li>

        <% else %>

          <li><a href="/users/new">Sign Up</a></li>
          <li><a href="/session/new">Sign In</a></li>

        <% end %>
      </ul>
    </div>
  </div>
</div>



<section class="primary">

<div class="profile-header">
  <% unless @user.photo_url.empty? %>
    <img src="<%= @user.photo_url %>" class="profile-img">
  <% else %>
    <img src="https://cdn.gbot.me/img/default_avatar.jpg" class="profile-img">
  <% end %>

  <h1><%= @user.fname %>'s Posts</h1>
</div>

<% if @signed_in && @current_user.id == @user.id %>

  <a href="/posts/new">New Post</a> | 
  <a href="<%= "/users/#{@user.id}/edit" %>">Edit Profile</a><br><br>

<% elsif @signed_in && !@followers.map(&:id).include?(@current_user.id) %>
  
  <!-- button to follow -->
  <form action="/users/<%= @user.id %>/follow" method="post">

  <input type="hidden" name="following[follower_id]" value="<%= @current_user.id %>">
  <input type="hidden" name="following[user_id]" value="<%= @user.id %>">

    <input type="submit" value="Follow <%= @user.fname %>">

  </form>

 <%# elsif !@signed_in %>

  <!-- <a href="/session/new">Sign In to Write a New Post</a> -->

<% end %>


<% @posts.each do |post| %>

  <div class="well bs-component">
    <h2><%= post.title %></h2>
    <p class="post-body"><%= post.body %></p>
  </div>

<% end %>

<% unless @followers.empty? %>
  
  <h3>Followers</h3>
  <% @followers.each do |follower| %>
    <a href="/users/<%= follower.id %>">
      <%= follower.fname %> <%= follower.lname %><br>
    </a>
  <% end %>

<% end %>

<% unless @followees.empty? %>
  
  <h3>Following</h3>
  <% @followees.each do |followee| %>
    <a href="/users/<%= followee.id %>">
      <%= followee.fname %> <%= followee.lname %><br>
    </a>
  <% end %>

<% end %>



</section>
</body>
</html>